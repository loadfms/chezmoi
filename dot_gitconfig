[user]
	email = loadfms@gmail.com
	name = loadfms

[init]
	defaultBranch = main

[difftool]
	prompt = false
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"

[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE"
    trustExitCode = true
[mergetool]
	keepBackup = false

[pull]
	rebase = false
[push]
	autoSetupRemote = true

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
